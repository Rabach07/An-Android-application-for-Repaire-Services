<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#3E2723"
    xmlns:card_view="http://schemas.android.com/apk/res/res-auto"
    android:layout_margin="10dp"

    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:id="@+id/nameTxt"
        android:hint="Service Provider Name"
        android:padding="10dp"
        android:textColor="#AA00FF"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/nameAddress"
        android:padding="10dp"
        android:textColor="#AA00FF"
        android:layout_below="@+id/nameTxt"
        android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No:"
            android:id="@+id/nameContact"
            android:layout_below="@+id/nameAddress"
            android:padding="10dp"
            android:textColor="#AA00FF"
            android:layout_alignParentLeft="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:id="@+id/namePrize"
            android:padding="10dp"
            android:textColor="#AA00FF"
            android:layout_below="@+id/nameContact"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:text="Call"
            android:layout_width="150sp"
            android:layout_height="75sp"
            android:background="@null"
            android:src="@drawable/c14"
            android:scaleType="centerInside"
            android:id="@+id/button2"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

</RelativeLayout>

</android.support.v7.widget.CardView>